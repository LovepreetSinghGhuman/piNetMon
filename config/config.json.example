{
  "azure": {
    "subscription_id": "sample-subscription-id",
    "iot_hub": {
      "name": "sample-iot-hub-name",
      "resource_group": "sample-resource-group",
      "device_id": "sample-device-id",
      "connection_string": "HostName=sample-hub.azure-devices.net;DeviceId=sample-device;SharedAccessKey=sample-device-key",
      "service_connection_string": "HostName=sample-hub.azure-devices.net;SharedAccessKeyName=service;SharedAccessKey=sample-service-key"
    },
    "storage_account": {
      "name": "sample-storage-account"
    },
    "ml": {
      "workspace_name": "sample-ml-workspace",
      "resource_group": "sample-ml-resource-group"
    }
  },
  "sensors": {
    "temperature": {
      "enabled": true,
      "interval_seconds": 60
    },
    "cpu": {
      "enabled": true,
      "interval_seconds": 30
    },
    "memory": {
      "enabled": true,
      "interval_seconds": 30
    },
    "network": {
      "enabled": true,
      "interval_seconds": 60
    }
  },
  "questdb": {
    "host": "localhost",
    "port": 9000,
    "docker": {
      "container_name": "questdb",
      "ports": {
        "http": 9000,
        "influxdb": 9009,
        "postgres": 8812,
        "min_http": 9003
      },
      "volume_path": "~/piNetMon/data/questdb",
      "restart_policy": "unless-stopped"
    }
  },
  "local_storage": {
    "path": "./data",
    "max_size_mb": 100,
    "retention_days": 7
  },
  "mongodb": {
    "enabled": true,
    "connection_string": "mongodb+srv://username:password@samplecluster.mongodb.net/",
    "database": "sample-database",
    "collection": "sample-collection"
  },
  "ai_models": {
    "local": {
      "model_path": "./models/model.pkl",
      "use_onnx": true,
      "anomaly_detection": {
        "enabled": true,
        "threshold": 0.8
      }
    },
    "cloud": {
      "enabled": true,
      "endpoint": "https://sample-ml-endpoint.azure.com/score",
      "api_key": "sample-api-key"
    }
  },
  "dashboard": {
    "port": 8501,
    "host": "0.0.0.0",
    "refresh_interval": 5
  },
  "logging": {
    "level": "INFO",
    "log_dir": "./logs",
    "files": {
      "dashboard": "logs/dashboard.log",
      "main": "logs/monitor.log"
    }
  }
}
